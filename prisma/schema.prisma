generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id             Int              @id @default(autoincrement())
  image          String
  url_image      String
  category_name  String           @unique
  challenges     challenges[]
  user_proggress user_proggress[]
}

model challenges {
  id              Int        @id @default(autoincrement())
  categorie_id    Int
  challenge_image String?
  question        String
  choices         String[]
  answer          String
  level           Int
  categorie       categories @relation(fields: [categorie_id], references: [id])
  point           Int
}

model user_proggress {
  id            Int        @id @default(autoincrement())
  user_id       Int
  categorie_id  Int
  current_level Int
  users         users      @relation(fields: [user_id], references: [id])
  categories    categories @relation(fields: [categorie_id], references: [id])
}

model users {
  id             Int              @id @default(autoincrement())
  username       String           @unique
  email          String           @unique
  password       String
  user_image     String?
  image_url      String?
  point          Int              @default(0)
  banned         Boolean          @default(false)
  refresh_token  String?
  user_proggress user_proggress[]
}
