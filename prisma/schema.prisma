generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model categories {
  id            Int        @id @default(autoincrement())
  image         String
  category_name String
  chapters      chapters[]
}

model chapters {
  id             Int          @id @default(autoincrement())
  categorie_id   Int
  user_id        Int
  chapter_number Int
  active         Boolean
  challenges     challenges[]
  categori       categories   @relation(fields: [categorie_id], references: [id])
  user           users        @relation(fields: [user_id], references: [id])
}

model challenges {
  id              Int      @id @default(autoincrement())
  chapter_id      Int
  challenge_image String
  question        String
  choices         String[]
  answer          String
  chapter         chapters @relation(fields: [chapter_id], references: [id])
}

model users {
  id            Int        @id @default(autoincrement())
  username      String     @unique
  email         String     @unique
  password      String
  user_image    String?
  point         Int        @default(0)
  banned        Boolean    @default(false)
  refresh_token String?
  chapters      chapters[]
}
